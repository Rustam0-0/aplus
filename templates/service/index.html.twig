                <td>{{ service.picture3 }}</td>
                <td>{{ service.picture4 }}</td>
                <td>{{ service.picture5 }}</td> #}
                <td>
                    <a href="{{ path('app_service_show', {'id': service.id}) }}">show</a>
                    <a href="{{ path('app_service_edit', {'id': service.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
